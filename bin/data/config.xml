<GLOBAL>
	<!-- AutoPlayer Demo Configuration File -->
	<TITLE>Demo</TITLE>
	<!-- currently set to fit in a desktop window for development -->
	<WINDOW> 
		<WIDTH>1920</WIDTH><HEIGHT>1080</HEIGHT><FULLSCREEN>FALSE</FULLSCREEN>
	</WINDOW>
	<!-- tiles/screens in grid (horizontal/vertical)-->
	<TILES>	
		<H>3</H><V>3</V>
	</TILES>
	<!-- background color (rgb) values 0-255 -->
	<BKG_COLOR>
		<R>0</R><G>0</G><B>0</B> 
	</BKG_COLOR>
	<!-- once / loop / endless (doesn't loop, doesn't stop)...play transition fades in/out on once & loop, duration(in seconds)-->
	<PLAYING>
		<TYPE>LOOP</TYPE><DURATION>30.0</DURATION><TRANSITION>TRUE</TRANSITION>
	</PLAYING>
	<!-- maximum videos/sounds playing simultaneously -->
	<VIDEOS_MAX>6</VIDEOS_MAX>
	<SOUNDS_MAX>6</SOUNDS_MAX>
	<!-- shows framerate and other data for troubleshooting -->
	<SHOW_DATA>TRUE</SHOW_DATA>
	<!-- for triggered events -> off, mouse or cameras-->
	<INPUT_TYPE>OFF</INPUT_TYPE>
</GLOBAL>

<!-- specific timed/scripted events (always triggered) -->
<TIMED_EVENTS>
    <!-- images -->
    
    <EVENT><START>0.0</START><END>30.0</END><TYPE>IMAGE</TYPE><PATH>images/01.jpg</PATH><LOC>FULL</LOC><A>1.0</A><A_TRANS>TRUE</A_TRANS><A_TIME>2.0</A_TIME><LAYER>9</LAYER></EVENT>
	<EVENT><START>6.0</START><END>22.0</END><TYPE>VIDEO</TYPE><PATH>videos/00.mov</PATH><LOC>RANDOM</LOC><A>0.5</A><A_TRANS>TRUE</A_TRANS><A_TIME>2.0</A_TIME><LOOP>TRUE</LOOP><LAYER>2</LAYER></EVENT>
	<EVENT><START>10.0</START><END>23.0</END><TYPE>RANDOMIMAGE</TYPE><PATH>images</PATH><LOC>RANDOM</LOC><A>0.5</A><A_TRANS>TRUE</A_TRANS><A_TIME>2.0</A_TIME><LAYER>2</LAYER></EVENT>

	
</TIMED_EVENTS>

